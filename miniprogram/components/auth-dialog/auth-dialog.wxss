
.dialog-layer {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.7);
  z-index: 998;
}
.dialog-wrapper {
  width: 60%;
  left: 50%;
  top: 35%;
  position: fixed;
  transform: translate(-50%,0);
  background: #ffffff;
  border-radius: 10px;
  z-index: 999;
  padding: 50rpx;
}
.hd {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.hd view {
  margin-top: 20rpx;
  font-size: 30rpx;
}

.btn {
  position: relative;
  height: 80rpx;
  width: 50%;
  font-size: 30rpx;
  line-height: 80rpx;
  text-align: center;
  color: white;
  background: #09BB07;
  border-radius: 10rpx;
  margin-top: 30rpx;
}

button:active {
  color: rgba(255,255,255,0.6);
  opacity: 0.6;
}